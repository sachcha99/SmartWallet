<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1abc9c"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt4"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:layout_marginBottom="11dp"
        android:background="#11836D"
        android:drawableBottom="@drawable/ic_money"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Savings"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="295dp"
        android:layout_marginRight="295dp"
        android:layout_marginBottom="11dp"
        android:background="#11836D"
        android:drawableBottom="@drawable/ic_dollar"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Income"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="93dp"
        android:layout_marginRight="93dp"
        android:layout_marginBottom="11dp"
        android:background="#11836D"
        android:drawableBottom="@drawable/ic_menu"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Categories"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="193dp"
        android:layout_marginRight="193dp"
        android:layout_marginBottom="11dp"
        android:background="#11836D"
        android:drawableBottom="@drawable/ic_expenses"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Expenses"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="76dp"
        app:srcCompat="@drawable/neww" />

</RelativeLayout>