<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"

        android:layout_marginLeft="90dp"
        android:background="#D8D7D7"
        android:drawableRight="@drawable/ic_edit"
        android:fontFamily="@font/berkshire_swash"
        android:text="Edit Entry"
        android:textSize="30sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="145dp"
        android:layout_height="39dp"
        android:fontFamily="@font/aladin"
        android:text="  Amount"
        android:textAllCaps="true"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the new Amount"
        android:inputType="number|numberDecimal" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="145dp"
        android:layout_height="39dp"
        android:fontFamily="@font/aladin"
        android:text="  Category"
        android:textAllCaps="true"
        android:textSize="24sp"
        tools:ignore="DuplicateIds" />

    <Spinner
        android:id="@+id/spinnerGenres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextName"
        android:entries="@array/inc"></Spinner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonUpdateArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_updated"
            android:fontFamily="@font/amarante"
            android:text="Update"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonDeleteArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_delete"
            android:fontFamily="@font/amarante"
            android:text="Delete"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>